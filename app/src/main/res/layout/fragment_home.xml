<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ide"
    tools:context=".UI.Fragments.HomeFragment">

    <TextView
        android:id="@+id/cars_in_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/cars_in_stock_ru"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carAdList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5sp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/brandList_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cars_in_stock" />


    <Button
        android:id="@+id/brandList_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="@string/all_brands_list_ru"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/review_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,UsingOnClickInXml" />

    <Button
        android:id="@+id/review_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="Оставить отзыв"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,UsingOnClickInXml" />


</androidx.constraintlayout.widget.ConstraintLayout>