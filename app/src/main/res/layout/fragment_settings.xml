<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ide"
    tools:context=".UI.Fragments.SettingsFragment">

    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/black"
        android:text="@string/about_app_ru"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/review_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,UsingOnClickInXml" />

    <Button
        android:id="@+id/review_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="Оставить отзыв"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,UsingOnClickInXml" />
</androidx.constraintlayout.widget.ConstraintLayout>