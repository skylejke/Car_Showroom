        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/rs6_image"
        app:layout_constraintEnd_toEndOf="@id/rs6_image" />

    <ImageView
        android:id="@+id/rs6_image"
        android:layout_width="wrap_content"
        android:layout_height="339dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/audi_rs6_c8"
