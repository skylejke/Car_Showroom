<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.carshowroom.UI.Fragments.HomeFragment"
        android:label="Main"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_carAdFragment"
            app:destination="@id/carAdFragment" />
        <action
            android:id="@+id/action_mainFragment_to_brandslistFragment"
            app:destination="@id/brandslistFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.carshowroom.UI.Fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.carshowroom.UI.Fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/carAdFragment"
        android:name="com.example.carshowroom.UI.Fragments.CarAdFragment"
        android:label="CarAd"
        tools:layout="@layout/fragment_car_ad">
        <action
            android:id="@+id/action_carAdFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_carAdFragment_to_bookFragment"
            app:destination="@id/bookFragment" />
        <argument
            android:name="carAd_Key"
            android:defaultValue="0"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/brandslistFragment"
        android:name="com.example.carshowroom.UI.Fragments.BrandListFragment"
        android:label="BrandList"
        tools:layout="@layout/fragment_recyclerview">
        <action
            android:id="@+id/action_brandslistFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.example.carshowroom.UI.Fragments.ReviewFragment"
        android:label="Review"
        tools:layout="@layout/fragment_review">
        <action
            android:id="@+id/action_reviewFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookFragment"
        android:name="com.example.carshowroom.UI.Fragments.BookFragment"
        android:label="Book"
        tools:layout="@layout/fragment_book">
        <action
            android:id="@+id/action_bookFragment_to_carAdFragment"
            app:destination="@id/carAdFragment" />
        <argument
            android:name="car_Key"
            android:defaultValue="0"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.carshowroom.UI.Fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about">
        <action
            android:id="@+id/action_aboutFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>


</navigation>